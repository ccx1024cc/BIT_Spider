<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.bit.ss.mapper.NewsMapper">
  	<insert id="save" useGeneratedKeys="true" keyProperty="id">
  		insert into 
  		tbl_news(news_title,news_content,news_pubtime,news_type,news_url)
  		values(#{title},#{content},#{pubTime,javaType=java.util.Date,jdbcType=VARCHAR},#{type},#{url});
  	</insert>
  	
  	<select id="findTitle">
  		select news_title from tbl_news
  		where news_title = #{title};
  	</select>
  </mapper>